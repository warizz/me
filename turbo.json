{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "outputs": ["dist/**", ".next/**"]
    },
    "build:test": {
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "tsc": {
      "outputs": []
    },
    "start": {
      "dependsOn": ["build"]
    },
    "start:test": {
      "dependsOn": ["build:test"]
    },
    "test": {},
    "test:ci": {},
    "gen-sitemap": {}
  },
  "globalEnv": [
    "NEXT_PUBLIC_IS_DISABLED_GA",
    "SUPABASE_PROJECT_URL",
    "SUPABASE_API_SECRET_KEY"
  ]
}
